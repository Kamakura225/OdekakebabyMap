<% facility_labels = {
  nursery: "授乳室",
  diaper: "おむつ交換台",
  kids_toilet: "幼児用トイレ",
  stroller: "ベビーカー対応",
  playground: "遊具",
  shade: "木陰",
  bench: "ベンチ",
  elevator: "エレベーター",
  parking: "駐車場"
  } %>

  <div class="mb-3">
    <p class="fw-bold">設備情報</p>
    <div class="row">
      <% facility_labels.each do |attr, label_text| %>
        <div class="col-6 col-md-4 mb-2">
          <div class="form-check">
            <%= f.check_box attr, class: "form-check-input" %>
            <%= f.label attr, label_text, class: "form-check-label" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>